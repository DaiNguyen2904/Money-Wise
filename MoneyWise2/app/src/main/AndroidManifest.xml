<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoneyWise">

        <activity
            android:name=".ui.onboarding.OnboardingActivity"
            android:exported="true"
            android:theme="@style/Theme.MoneyWise"> <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>

        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false"> </activity>

        <activity android:name=".MainActivity"></activity>
        <activity android:name=".ui.expenses.AddEditExpenseActivity" />
        <activity
            android:name=".ui.categories.CategoryActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ui.categories.AddEditCategoryActivity"
            android:parentActivityName=".ui.categories.CategoryActivity" />
        <activity
            android:name=".ui.budgets.BudgetActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ui.budgets.AddEditBudgetActivity"
            android:parentActivityName=".ui.budgets.BudgetActivity" />
    </application>
</manifest>