<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout_buttons_budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/button_edit_budget"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Sửa"
                    app:srcCompat="@drawable/icons8_edit_64"
                    app:tint="?attr/colorControlNormal" />

                <ImageButton
                    android:id="@+id/button_delete_budget"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Xóa"
                    app:srcCompat="@drawable/icons8_delete_30"
                    app:tint="@android:color/holo_red_dark" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_view_budget_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@id/layout_buttons_budget"
                android:textAppearance="?attr/textAppearanceHeadline6"
                tools:text="Ngân sách Ăn uống" />

            <TextView
                android:id="@+id/text_view_budget_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_budget_name"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceCaption"
                tools:text="Hàng tháng" />

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progress_bar_budget"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="100"
            tools:progress="60" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">
            <TextView
                android:id="@+id/text_view_spent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textStyle="bold"
                tools:text="1.200.000đ" />

            <TextView
                android:id="@+id/text_view_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textAppearance="?attr/textAppearanceBody2"
                tools:text="2.000.000đ" />
        </RelativeLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>