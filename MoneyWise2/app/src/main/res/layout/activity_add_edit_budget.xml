<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.budgets.AddEditBudgetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giới hạn Ngân sách (Hàng tháng)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_amount_budget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Chọn Danh mục"
            android:textAppearance="?attr/textAppearanceLabelMedium" />

        <GridLayout
            android:id="@+id/grid_layout_categories_budget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:columnCount="3"
            android:alignmentMode="alignBounds" android:useDefaultMargins="true">

            <include layout="@layout/layout_category_icon_button"
                android:id="@+id/cat_btn_1_budget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal" />
            <include layout="@layout/layout_category_icon_button"
                android:id="@+id/cat_btn_2_budget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal" />
            <include layout="@layout/layout_category_icon_button"
                android:id="@+id/cat_btn_3_budget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal" />

            <include layout="@layout/layout_category_icon_button"
                android:id="@+id/cat_btn_4_budget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal" />
            <include layout="@layout/layout_category_icon_button"
                android:id="@+id/cat_btn_5_budget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal" />
            <include layout="@layout/layout_category_icon_button"
                android:id="@+id/cat_btn_6_budget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal" />

            <include layout="@layout/layout_category_icon_button"
                android:id="@+id/cat_btn_7_budget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal" />
            <include layout="@layout/layout_category_icon_button"
                android:id="@+id/cat_btn_8_budget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal" />


            <LinearLayout
                android:id="@+id/cat_btn_other_budget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1" android:layout_gravity="fill_horizontal" android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="@android:drawable/ic_menu_more" /> <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:text="Khác" />
            </LinearLayout>

        </GridLayout>


        <Button
            android:id="@+id/button_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Lưu lại"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>