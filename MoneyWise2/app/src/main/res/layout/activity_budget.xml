<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.budgets.BudgetActivity"
    android:background="@color/app_background_gray">

    <ListView
        android:id="@+id/list_view_budgets"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="8.0sp"
        tools:listitem="@layout/list_item_budget" /> <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/fab_add_budget"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:layout_margin="16dp"
    android:contentDescription="Thêm ngân sách mới"
    app:srcCompat="@android:drawable/ic_input_add" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>