<?xml version="1.0" encoding="utf-8"?>
<!-- BƯỚC 1: Đổi root thành LinearLayout (vertical) -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.expenses.AddEditExpenseActivity"
    android:background="@color/app_background_gray">

    <!-- BƯỚC 2: Thêm Toolbar vào đây -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_add_edit_expense"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbar_gradient_background"
        app:titleTextColor="@android:color/white"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- BƯỚC 3: Bọc nội dung cũ trong NestedScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Đây là nội dung gốc của bạn (chỉ đổi ScrollView -> LinearLayout) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvSoTien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số tiền"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:placeholderText="Nhập số tiền">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_amount"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="numberDecimal"
                    android:textSize="8sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chọn Danh mục:"
                    android:textAppearance="?attr/textAppearanceLabelMedium"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_view_selected_category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textAppearance="?attr/textAppearanceLabelMedium"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    tools:text="Ăn uống"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>

            <GridLayout
                android:id="@+id/grid_layout_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:alignmentMode="alignBounds"
                android:columnCount="3"
                android:useDefaultMargins="true">

                <include
                    android:id="@+id/cat_btn_1"
                    layout="@layout/layout_category_icon_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal" />

                <include
                    android:id="@+id/cat_btn_2"
                    layout="@layout/layout_category_icon_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal" />

                <include
                    android:id="@+id/cat_btn_3"
                    layout="@layout/layout_category_icon_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal" />

                <include
                    android:id="@+id/cat_btn_4"
                    layout="@layout/layout_category_icon_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal" />

                <include
                    android:id="@+id/cat_btn_5"
                    layout="@layout/layout_category_icon_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal" />

                <include
                    android:id="@+id/cat_btn_6"
                    layout="@layout/layout_category_icon_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal" />

                <include
                    android:id="@+id/cat_btn_7"
                    layout="@layout/layout_category_icon_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal" />

                <include
                    android:id="@+id/cat_btn_8"
                    layout="@layout/layout_category_icon_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal" />


                <LinearLayout
                    android:id="@+id/cat_btn_other"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:srcCompat="@android:drawable/ic_menu_more" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Khác"
                        android:textSize="12sp" />
                </LinearLayout>

            </GridLayout>


            <TextView
                android:id="@+id/tvNgay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_select_date"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="start|center_vertical"
                android:padding="12dp"
                android:text="Chọn ngày"
                android:textAllCaps="false"
                android:textColor="?attr/colorOnSurface"
                app:icon="@drawable/icons8_calendar_50" />

            <TextView
                android:id="@+id/tvGhiChu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ghi chú"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Ghi chú (Không bắt buộc)">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_note"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:inputType="textCapSentences" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/button_save"
                style="@style/MyGradientButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:padding="12dp"
                android:text="Lưu lại" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>